{
    "app": {
        "name": "ApiGateway"
    },
    "cloudSql": {
        "ConnectionString": "Host=localhost;Port=5433;Username=postgres;Password=postgres;Database=apigateway"
    },
    "redis": {
        "ConnectionString": "localhost:6379"
    },
    "DataProtectionCertPath": {
        "Path": "./Certs/data-protection-cert.pfx"
    },
    "httpClient": {
        "identityAuthority": "http://localhost.io:5000"
    },
    "rabbitMQ": {
        "host": "localhost",
        "port": "5672",
        "virtualHost": "/",
        "username": "guest",
        "password": "guest",
        "namespace": "apigateway",
        "retries": 3,
        "retryInterval": 3
    },
    "serverBindingUrl": "http://*:8081",
    "Serilog": {
        "Using": ["Serilog.Sinks.Console"],
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Information",
                "System": "Warning"
            }
        },
        "Enrich": ["FromLogContext"],
        "Properties": {
            "Application": "ApiGateway"
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
                }
            },
            { "Name": "Seq", "Args": { "serverUrl": "http://seq:5341" } }
        ]
    }
}
